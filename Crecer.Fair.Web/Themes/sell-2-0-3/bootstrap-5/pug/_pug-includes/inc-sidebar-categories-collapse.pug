.sidebar-block.px-3.px-lg-0(class=sidebarBlockClass)
    a.d-lg-none.block-toggler(data-bs-toggle="collapse", href="#categoriesMenu", aria-expanded="false", aria-controls="categoriesMenu") Product Categories

    - var menu = [] 
    - menu.push({name: 'Jackets', activeClass: 'active', count: 123, children: ['Lorem ipsum', 'Dolor', 'Sit amet', 'Donec vitae']})
    - menu.push({name: 'Jeans & chinos', activeClass: '', count: 55, children:  ['Lorem ipsum', 'Dolor', 'Sit amet', 'Donec vitae']})
    - menu.push({name: 'Accessories', activeClass: '', count: 80, children:  ['Sit amet', 'Donec vitae', 'Lorem ipsum', 'Dolor']})
    
    #categoriesMenu.expand-lg.collapse
        .nav.nav-pills.flex-column.mt-4.mt-lg-0(role='menu')
            each val, index in menu
                - expanded = "false"
                if (val.activeClass == 'active')
                    - expanded = "true"
                .sidebar-menu-item.mb-2(data-bs-toggle="collapse", data-bs-target=`#subcategories_${index}`, aria-expanded=expanded, aria-controls=`subcategories_${index}`, class=val.activeClass, role='menuitem')
                    a(href="#!", class="nav-link " + val.activeClass)
                        span #{val.name}
                        span.sidebar-badge.ms-2 #{val.count}
                .collapse(id=`subcategories_${index}`, class=`${(val.activeClass == 'active') ? 'show' : ''}`)
                    .nav.nav-pills.flex-column.ms-3
                        each child in val.children
                            a.nav-link.mb-2(href="#!") #{child}