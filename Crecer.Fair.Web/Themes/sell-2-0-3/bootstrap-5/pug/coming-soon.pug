extends _pug-includes/layout-coming.pug

block content
    .mh-full-screen.d-flex.align-items-center.dark-overlay
        img.bg-image(src="img/photo/pete-bellis-189599-unsplash-big.jpg", alt="")
        .container.text-white.text-center.text-lg.overlay-content.py-6.py-lg-0
            h1.mx-auto.mb-6 
                span.sr-only Coming soon
                img.img-fluid(src="img/coming-soon.png", alt="")
            h3.mb-5.fw-normal Sell. store is coming to you soon.
            p.mb-4 <i class="fas fa-map-marker-alt me-2"></i> 25 Baker St., LB8 E18 London, UK
            ul.list-inline
                - social = ['twitter', 'facebook', 'instagram', 'pinterest', 'vimeo']
                each val in social
                    li.list-inline-item
                        a.text-white(href="#", target="_blank", title=val)
                            i(class="fab fa-" + val)            
