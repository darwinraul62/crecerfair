@model FooterSectionModel

<!-- Footer-->
    <footer class="main-footer">

      <!-- Main block - menus, subscribe form-->
      <div class="py-6 bg-gray-300 text-muted"> 
        <div class="container">
          <div class="row">
            <div class="col-lg-8 mb-5 mb-lg-0">
              <div class="fw-bold text-uppercase text-lg text-dark mb-3">@Model.ContactData.Host<span class="text-primary">.</span></div>
              <p>Telfs: @Model.ContactData.PhoneNumber1</p>              
              <p>@Model.ContactData.Email</p>
              <ul class="list-inline">
                @if(!string.IsNullOrWhiteSpace(Model.ContactData.TwitterAddress))
                {
                    <li class="list-inline-item"><a class="text-muted text-primary-hover" href="@Model.ContactData.TwitterAddress" target="_blank" title="twitter"><i class="fab fa-twitter"></i></a></li>
                }
                @if(!string.IsNullOrWhiteSpace(Model.ContactData.FacebookAddress))
                {
                    <li class="list-inline-item"><a class="text-muted text-primary-hover" href="@Model.ContactData.FacebookAddress" target="_blank" title="facebook"><i class="fab fa-facebook"></i></a></li>
                }
                @if(!string.IsNullOrWhiteSpace(Model.ContactData.YoutubeAddress))
                {
                    <li class="list-inline-item"><a class="text-muted text-primary-hover" href="@Model.ContactData.YoutubeAddress" target="_blank" title="youtube"><i class="fab fa-youtube"></i></a></li>                
                }
                @if(!string.IsNullOrWhiteSpace(Model.ContactData.InstagramAddress))
                {
                    <li class="list-inline-item"><a class="text-muted text-primary-hover" href="@Model.ContactData.InstagramAddress" target="_blank" title="instagram"><i class="fab fa-instagram"></i></a></li>                
                }
              </ul>
            </div>
            <div class="col-lg-4 col-md-6 mb-5 mb-lg-0">
              <h6 class="text-uppercase text-dark mb-3">Enlaces Populares</h6>
              <ul class="list-unstyled">
                <li> <a class="text-muted" href="@Model.ContactData.WebSite">Sitio Web Principal</a></li>
                <li> <a class="text-muted" href="http://www.crecer.com.ec/productosahorro">Productos de Ahorro</a></li>
                <li> <a class="text-muted" href="http://www.crecer.com.ec/productoscredito">Productos de Cr√©dito</a></li>
                <li> <a class="text-muted" href="http://www.crecer.com.ec/preguntasfrecuentes">Preguntas frecuentes</a></li>
                <li> <a class="text-muted" href="http://www.crecer.com.ec/contactanos">Consultas, Sugerencias, Reclamos</a></li>                
              </ul>
            </div>
           
           
          </div>
        </div>
      </div>
      <!-- Copyright section of the footer-->
      <div class="py-4 fw-light bg-gray-800 text-gray-300">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-md-12 text-center">
              <p class="mb-md-0">&copy; @DateTime.Now.Year ECUBYTES</p>
            </div>           
          </div>
        </div>
      </div>
    </footer>
    <!-- /Footer end-->