<section>
    <div class="container-sm">
        <div class="row">
            
                <div class="block mb-5">
                    <div class="block-header"><strong class="text-uppercase">Ingreso de nueva Contraseña</strong></div>
                    <div class="block-body">
                        <form method="post">
                            
                            <input name="Otp" type="hidden" value="@Model.Otp">
                            <input name="Name" type="hidden" value="@Model.Name">
                            <input name="Email" type="hidden" value="@Model.Email">
                            <input name="UserId" type="hidden" value="@Model.UserId">

                            <div class="row">
                                <msgblock></msgblock>
                            </div>

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="mb-4">
                                        <label class="form-label" asp-for="Password">Nueva Contraseña</label>
                                        <input class="form-control" asp-for="Password" type="password">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="mb-4">
                                        <label class="form-label" asp-for="ConfirmPassword">Confirmar Contraseña</label>
                                        <input class="form-control" asp-for="ConfirmPassword" type="password">
                                    </div>
                                </div>
                            </div>
                            <div class="text-center mt-4">
                                
                                <button id="change-password-button" class="btn btn-outline-dark" type="submit"><i
                                        class="fas fa-lock"></i> Establecer Contraseña</button>
                            </div>
                        </form>
                    </div>
                </div>
                  

        </div>         
    </div>
</section>

<vc:footer-section></vc:footer-section>