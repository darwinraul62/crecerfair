            <h2 class="text-uppercase text-white fw-light mb-4 letter-spacing-5">Bienvenido</h2>
            <h1 class="mb-5 display-2 fw-bold text-serif">@Model.Fair.Title</h1>
            <p class="lead p-welcome-text mb-4 d-none d-lg-block">@Model.Fair.WelcomeText</p>
            <p> <a class="btn btn-big btn-light" asp-controller="Fair" asp-action="Start">Ingresar a la Feria</a></p>
        </div>
    </div>
    <div class="owl-carousel owl-theme owl-dots-modern home-full-slider">

        @foreach (var item in Model.BannerItems)
