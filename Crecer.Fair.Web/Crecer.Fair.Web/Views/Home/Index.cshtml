@model HomeIndexViewModel
@{
    ViewData["Title"] = "Feria Virtual Crecer";
}

<header class="header header-absolute">
    <!-- Navbar-->
    <nav class="navbar navbar-sticky navbar-dark navbar-hover-light navbar-fixed-light bg-fixed-white bg-transparent bg-hover-white bg-fixed-white navbar-fullscreen navbar-fullscreen-light px-0 px-sm-3">
        <div class="container-fluid">
            <!-- Navbar Header  -->
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                <img src="/img/logo_crecer.png" class="logo-home">
            </a>

            <h3 class="d-none mb-0 home-header-title text-uppercase mx-auto text-center">
                COOPERATIVA DE AHORRO Y CREDITO CRECER
                </h3>

                <!-- Navbar Collapse -->
                <div class="" id="navbarCollapse">
                    <div
                        class="d-flex align-items-center justify-content-between justify-content-lg-end mt-1 mb-2 my-lg-0">
                        <a class="btn btn-big btn-light btn-signin" asp-controller="Fair" asp-action="Start">Ingresar</a>
                    </div>
                </div>
        </div>
    </nav>
</header>

